#!/bin/bash
#
# Usage
#   redmine show [options] <ticket_id>
#
# Description
#
# Options
#   -n            display notes
#   -h            show this message
#

# TODO: support local ticket

show_help() {
	sed -n 2,$[$BASH_LINENO-4]p $BASH_SOURCE | grep "^#" | sed 's/^#/ /'
}

SHOW_JOURNALS=

while [[ $# -gt 0 ]] ; do
	key="$1"
	case $key in
		-n)
			SHOW_JOURNALS=true
			shift
			;;
		-h)
			show_help
			exit 0
			;;
		*)
			break
			;;
	esac
done

ISSUEID=$1

if ! check_ticket_id_format $ISSUEID ; then
	echo "invalid issueid format" >&2
	exit 1
fi

if [[ "$ISSUEID" =~ ^L ]] ; then
	cat $TMPD/$ISSUEID/draft.md
	exit
fi

update_local_cache_task $ISSUEID || exit 1
! check_issue_exist $ISSUEID && echo "issue $ISSUEID not found" && exit 1

# TODO: better file name
tmpjson=$TMPD/$ISSUEID/issue.json
tmpfile=$TMPD/$ISSUEID/draft.md
relcsv=$TMPD/$ISSUEID/relations.csv

fetch_issue "$ISSUEID" "$relcsv" "$tmpjson" || exit 1
__format_to_draft "$tmpjson" "$tmpfile" "$relcsv" || exit 1
cat $tmpfile
if [ "$SHOW_JOURNALS" ] ; then
	echo
	jq -r '.journals[] | select(.notes != "") | "===> \(.user.name) on \(.created_on)\n\(.notes)"' $tmpjson
fi
